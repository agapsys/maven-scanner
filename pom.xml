	<modelVersion>4.0.0</modelVersion>
    
	<groupId>com.agapsys.libs</groupId>
	<artifactId>scanner-maven-plugin-lib</artifactId>
	<version>0.1.0</version>
	<packaging>jar</packaging>

	<name>Scanner Maven Plugin Library</name>
	<description>Utility library for scanner maven plugins</description>
	<url>https://github.com/agapsys/scanner-maven-plugin-lib/</url>
	
	<licenses>
		<license>
			<name>The Apache License, Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
		</license>
	</licenses>
	
	<developers>
		<developer>
			<name>Leandro Oliveira</name>
			<email>leandro@agapsys.com</email>
			<organization>Agapsys Tecnologia Ltda-ME</organization>
			<organizationUrl>http://www.agapsys.com</organizationUrl>
		</developer>
	</developers>
	
	<scm>
		<connection>scm:git:git@github.com:agapsys/scanner-maven-plugin-lib.git</connection>
		<url>git@github.com:agapsys/scanner-maven-plugin-lib.git</url>
	</scm>
	
	<organization>
		<name>Agapsys Tecnologia Ltda-ME</name>
		<url>http://www.agapsys.com</url>
	</organization>

